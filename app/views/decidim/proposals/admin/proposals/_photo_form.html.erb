<div class="card">
  <div class="card-divider">
    <h2 class="card-title"><%= t(".title") %></h2>
  </div>
  <div class="card-section">
    <%= decidim_form_for(@photo_form, url: decidim_admin_reporting_proposals.photos_proposal_path(id: proposal.id),
                         method: :post,
                         html: { multipart: true, class: "form edit_proposal proposal_form_admin" }) do |f| %>
      <%#= f.hidden_field :proposal_id, value: proposal.id %>

      <div class="row column gallery__container">
        <fieldset>
          <legend><%= t(".gallery_legend") %></legend>

          <div class="row column">
            <%= f.file_field :add_photos, multiple: true %>
          </div>
        </fieldset>
      </div>

      <div class="actions">
        <%= f.submit t(".action") %>
      </div>
    <% end %>
  </div>
</div>
